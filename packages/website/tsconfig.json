{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "lib": ["es2022", "dom", "dom.iterable"],
    "allowJs": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "baseUrl": ".",
