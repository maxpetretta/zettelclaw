{
  "name": "zettelclaw",
  "version": "2026.2.23",
  "description": "CLI and vault template for Zettelclaw - your agent's second brain, built together",
  "repository": {
    "type": "git",
    "url": "https://github.com/maxpetretta/zettelclaw"
  },
  "type": "module",
  "bin": {
    "zettelclaw": "bin/zettelclaw.js"
  },
  "files": [
    "bin",
    "dist",
    "skill",
    "vault"
  ],
  "scripts": {
    "build": "rm -rf dist && bun build --target node --outfile dist/index.js src/index.ts && mkdir -p dist/prompts && if [ -d prompts ]; then cp prompts/*.md dist/prompts/ 2>/dev/null || true; fi",
    "sync:skill": "node scripts/sync-skill-assets.mjs",
    "prepack": "bun run build && bun run sync:skill",
    "start": "bun run src/index.ts",
    "init": "bun run src/index.ts init",
    "migrate": "bun run src/index.ts migrate",
    "verify": "bun run src/index.ts verify",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "lint": "biome check . && tsgo --noEmit",
    "lint:biome": "biome check .",
    "lint:typecheck": "tsgo --noEmit",
    "fix": "biome check --write ."
  },
  "dependencies": {
    "@clack/prompts": "1.0.1"
  },
  "devDependencies": {
    "@types/bun": "1.2.5"
  }
}
