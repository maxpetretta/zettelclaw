{
  "name": "@zettelclaw/skill",
  "version": "0.1.0",
  "description": "Zettelclaw skill package for OpenClaw and ClawHub",
  "private": false,
  "type": "module",
  "files": [
    "SKILL.md",
    "hooks",
    "templates"
  ],
  "clawhub": {
    "skill": {
      "entry": "SKILL.md",
      "hooksDir": "hooks",
      "templatesDir": "templates"
    }
