{
  "name": "zettelclaw-workspace",
  "private": true,
  "workspaces": ["packages/cli", "packages/plugin", "packages/skill", "packages/website"],
  "scripts": {
    "clone": "./scripts/clone-openclaw-workspace.sh",
    "cli": "bun run --cwd packages/cli start",
    "cli:build": "bun run --cwd packages/cli build",
    "cli:init": "bun run --cwd packages/cli init",
    "cli:migrate": "bun run --cwd packages/cli migrate",
    "cli:verify": "bun run --cwd packages/cli verify",
    "cli:uninstall": "bun run --cwd packages/cli uninstall",
    "cli:test": "bun run --cwd packages/cli test",
    "init": "bun run cli:init",
    "migrate": "bun run cli:migrate",
    "verify": "bun run cli:verify",
    "uninstall": "bun run cli:uninstall",
    "smoke": "./scripts/run-local-smoke-tests.sh",
    "web": "bun run --cwd packages/website dev",
    "web:dev": "bun run --cwd packages/website dev",
    "web:build": "bun run --cwd packages/website build",
    "web:preview": "bun run --cwd packages/website preview",
    "lint": "bun run --cwd packages/cli lint && bun run --cwd packages/skill lint && bun run --cwd packages/website lint",
    "fix": "bun run --cwd packages/cli fix && bun run --cwd packages/skill fix && bun run --cwd packages/website fix"
  },
  "devDependencies": {
    "@biomejs/biome": "2.4.3",
    "@typescript/native-preview": "7.0.0-dev.20260219.1"
  }
}
