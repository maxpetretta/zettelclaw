{
  "name": "zettelclaw",
  "version": "0.1.0",
  "description": "CLI and vault template for the Zettelclaw human+agent knowledge system",
  "type": "module",
  "bin": {
    "zettelclaw": "./src/index.ts"
  },
  "files": [
    "src",
    "hooks",
    "vault",
    "README.md"
  ],
  "scripts": {
    "start": "bun run src/index.ts",
    "init": "bun run src/index.ts init",
    "upgrade": "bun run src/index.ts upgrade",
    "typecheck": "tsgo --noEmit",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "check": "biome check . && tsgo --noEmit"
  },
  "dependencies": {
    "@clack/prompts": "^1.0.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.3",
    "@types/bun": "latest",
    "@typescript/native-preview": "^7.0.0-dev.20260219.1",
    "typescript": "^5.9.3"
  }
}
